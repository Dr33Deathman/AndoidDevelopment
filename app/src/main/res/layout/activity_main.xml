<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http:// schemas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_number_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="75sp"
            tools2:ignore="NestedWeights" />

        <TextView
            android:id="@+id/bottom_number_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:text="@string/_0"
            android:textSize="50sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical"
            tools2:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/_7"
                    style="@style/ButtonNumbers"
                    android:text="@string/_7" />

                <TextView
                    android:id="@+id/_8"
                    style="@style/ButtonNumbers"
                    android:text="@string/_8" />

                <TextView
                    android:id="@+id/_9"
                    style="@style/ButtonNumbers"
                    android:text="@string/_9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/_4"
                    style="@style/ButtonNumbers"
                    android:text="@string/_4" />

                <TextView
                    android:id="@+id/_5"
                    style="@style/ButtonNumbers"
                    android:text="@string/_5" />

                <TextView
                    android:id="@+id/_6"
                    style="@style/ButtonNumbers"
                    android:text="@string/_6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/_1"
                    style="@style/ButtonNumbers"
                    android:text="@string/_1" />

                <TextView
                    android:id="@+id/_2"
                    style="@style/ButtonNumbers"
                    android:text="@string/_2" />

                <TextView
                    android:id="@+id/_3"
                    style="@style/ButtonNumbers"
                    android:text="@string/_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/_0"
                    style="@style/ButtonNumbers"
                    android:text="@string/_0" />

                <TextView
                    android:id="@+id/_dot"
                    style="@style/ButtonNumbers"
                    android:text="@string/_dot" />

                <TextView
                    android:id="@+id/_equals"
                    style="@style/ButtonNumbers"
                    android:text="@string/_equals" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/operations_layout_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/_clear"
                style="@style/ButtonOperations"
                android:text="@string/_clear" />

            <TextView
                android:id="@+id/_divide"
                style="@style/ButtonOperations"
                android:text="@string/_divide" />

            <TextView
                android:id="@+id/_multiply"
                style="@style/ButtonOperations"
                android:text="@string/_multiply" />

            <TextView
                android:id="@+id/_minus"
                style="@style/ButtonOperations"
                android:text="@string/_minus" />

            <TextView
                android:id="@+id/_plus"
                style="@style/ButtonOperations"
                android:text="@string/_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2992e3">

            <TextView
                android:id="@+id/_left_arrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/_left_arrow"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>